{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "outDir": "dist",
    "moduleResolution": "NodeNext",
    "target": "ES2022",
    "module": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src/server.ts",
    "src/services/**/*.ts",
    "src/mastra/agents/producthunt-agent.ts",
    "src/mastra/tools/producthunt-tools.ts"
  ]
}
